<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ABATO TUYIGE</title>
    <script
      src="https://kit.fontawesome.com/1a015cf62c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/style.css">
    <style>
       
      .card {
          background-color: #fff;
          border-radius: 5px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          padding: 20px;
          margin-bottom: 20px;
          max-width: 300px;
      }
      .card-image {
          width: 100%;
          height: auto;
          margin-bottom: 10px;
      }
      .audio-player {
          width: 100%;
          margin-bottom: 10px;
      }
      .comment-input {
          width: 100%;
          padding: 10px;
          border-radius: 5px;
          border: 1px solid #ccc;
          margin-bottom: 10px;
      }
      .submit-btn {
          padding: 10px 20px;
          background-color: #007bff;
          color: #fff;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }
      .submit-btn:hover {
          background-color: #0056b3;
      }
      .divider{
          display: grid;
          grid-template-columns: repeat(2,1fr);
          grid-gap:10px;
      }
      .heading{
          color:blue;
          font-size: 30px;
          text-align: center;
          padding: 20px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);

      }
      .main .no{
          text-align: center;
          font-size: 25px;
          font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
          font-weight: 100;

      }

      .video-player {
          width: 100%;
          height: auto;
      }

      .card-content {
          padding: 20px;
      }
      .files{
        display: grid;
        grid-template-columns:45% 45%;
        grid-gap:20px;
      }
      ul{
        display: flex;
        flex-direction: row;
      }
      ul li{
        list-style-type: none;
        padding: 10px;
        color: #007bff;
      }
      a{
        text-decoration: none;
      }
      a:hover{
        color:black
      }
      .nav{
        display: grid;
        grid-template-columns: 65% 30%;
        grid-gap:5%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 5px;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <%- include('./partials/navbar') %>
    
    <main class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (image.length > 0) { %>
                <% image.forEach(item => { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                        <img class="w-full h-48 object-cover" src="<%= item.image%>" alt="Learning Material">
                        <div class="p-4">
                            <audio controls class="w-full mb-4">
                                <source src="<%= item.audio %>" type="audio/mpeg">
                            </audio>
                            <p class="text-gray-700"><%= item.description %></p>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full text-center py-8">
                    <p class="text-gray-500 text-lg">No learning materials available yet.</p>
                </div>
            <% } %>
        </div>
    </main>

    <script src="/script.js"></script>
  </body>
</html>

