      font-size: 18px;
      margin-bottom: 15px;
      color: var(--dark);
      position: relative;
      padding-bottom: 10px;
    }
    
    .sidebar-title::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 40px;
      height: 3px;
      background-color: var(--secondary); /* Changed to orange */
      border-radius: 3px;
    }
    
    .topic-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    
    .topic-item {
      display: flex;
      align-items: center;
      padding: 10px;
      border-radius: var(--radius);
      background-color: var(--gray);
      transition: var(--transition);
      text-decoration: none;
      color: var(--text);
    }
    
    .topic-item:hover {
      background-color: var(--secondary); /* Changed to orange */
      color: white;
      transform: translateY(-2px);
    }
    
    .topic-icon {
