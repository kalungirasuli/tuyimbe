    <style>
       
      .card {
          background-color: #fff;
          border-radius: 5px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          padding: 20px;
          margin-bottom: 20px;
          max-width: 300px;
      }
      .card-image {
          width: 100%;
          height: auto;
          margin-bottom: 10px;
      }
      .audio-player {
          width: 100%;
          margin-bottom: 10px;
      }
      .comment-input {
          width: 100%;
          padding: 10px;
          border-radius: 5px;
          border: 1px solid #ccc;
          margin-bottom: 10px;
      }
      .submit-btn {
          padding: 10px 20px;
          background-color: #007bff;
          color: #fff;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }
      .submit-btn:hover {
          background-color: #0056b3;
      }
      .divider{
          display: grid;
          grid-template-columns: repeat(2,1fr);
          grid-gap:10px;
      }
      .heading{
          color:blue;
          font-size: 30px;
          text-align: center;
          padding: 20px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);

      }
      .main .no{
          text-align: center;
          font-size: 25px;
          font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
          font-weight: 100;

      }

      .video-player {
          width: 100%;
          height: auto;
      }

      .card-content {
          padding: 20px;
      }
      .files{
        display: grid;
        grid-template-columns:45% 45%;
        grid-gap:20px;
      }
      ul{
        display: flex;
        flex-direction: row;
      }
      ul li{
        list-style-type: none;
        padding: 10px;
        color: #007bff;
      }
      a{
        text-decoration: none;
      }
      a:hover{
        color:black
      }
      .nav{
        display: grid;
        grid-template-columns: 65% 30%;
        grid-gap:5%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 5px;
      }
    </style>
  </head>
